<html>

<head>
	<link href="/assets/app.css" media="all" rel="stylesheet" type="text/css">
	<link href="/assets/dir.css" media="all" rel="stylesheet" type="text/css">
	<title>List of Apps</title>
</head>

<body>
	<div id=report>
		<main>
			<div class="navbar--component---2ZZWk z-depth-1">
				<div class="navbar--report-info-cnt---3YmqH">
					<div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
					<h1 class="navbar--report-title---2yl5e" title="{{appName}}">
						<b>List of Apps:</b>
					</h1>
				</div>
				<div class="navbar--pct-bar---1gzOu">
					<span class="navbar--pct-bar-segment---3SKvk navbar--pass---2A0P1" style="width: 100%;" title="100.0% Passing"></span>
					<span class="navbar--pct-bar-segment---3SKvk navbar--fail---2K0uE" style="width: 0%;" title="0.0% Failing"></span>
				</div>
			</div>
			<div id="details" class="details container">
				<div class="suite--list-main---39CaH">
					{{#if msg}}
					<section class="suite--component---1WFoy suite--no-suites---2EVhf has-tests has-passed">
						<header class="suite--header---3CWtn">
							<h3 class="suite--title---CsLhu">Message: </h3>
							<p>
								{{msg}}
							</p>
						</header>
					</section>
					<section class="suite--component---1WFoy suite--no-suites---2EVhf has-tests has-passed">
						<a href="/">
							<header class="suite--header---3CWtn">
								<h3 class="suite--title---CsLhu">Go Back</h3>
							</header>
						</a>
					</section>
					{{/if}}
					{{#each apps}}
					<section class="suite--component---1WFoy suite--no-suites---2EVhf has-tests has-passed suite--chart-enabled---23t51">
						<header class="suite--header---3CWtn">
							<h3 class="suite--title---CsLhu">
								<a href="/{{this}}">
									{{this}}
								</a>
							</h3>
						</header>
					</section>
					{{/each}} 
					{{#unless apps.length}}
					<section class="suite--component---1WFoy suite--no-suites---2EVhf has-tests has-passed suite--chart-enabled---23t51">
						<header class="suite--header---3CWtn">
							<h3 class="suite--title---CsLhu">Nothing Here.</h3>
						</header>
					</section>
					{{/unless}}
					<section class="suite--component---1WFoy suite--no-suites---2EVhf has-tests has-passed suite--chart-enabled---23t51">
						<header id="add-app" class="suite--header---3CWtn">
							<h3 class="suite--title---CsLhu">Add App</h3>
						</header>
						<div id="add-app-form" class="suite--body---2Ql-3" style="display: none;">
							<form action="/apps/add" method="get">
								<section class="test--component---RMLbQ">
									<header class="test--header---186ZB">
										<h4 class="test--title---278p8" title="App Name">
											<input id="appName" type="text" name="appName" placeholder="App Name">
										</h4>
									</header>
									<header class="test--header---186ZB">
										<h4 class="test--title---278p8" title="Secret">
											<input id="appSecret" type="text" name="secret" placeholder="Secret">
										</h4>
									</header>
									<header class="test--header---186ZB">
										<h4 class="test--title---278p8" title="PreHook">
											<input id="appPrehook" type="text" name="prehook" placeholder="PreHook">
										</h4>
									</header>
									<header class="test--header---186ZB">
										<h4 class="test--title---278p8" title="PostHook">
											<input id="appPosthook" type="text" name="posthook" placeholder="PostHook">
										</h4>
									</header>
									<header class="test--header---186ZB">
										<h4 class="test--title---278p8" title="cwd">
											<input id="appCwd" type="text" name="cwd" placeholder="Current Working Directory">
										</h4>
									</header>
									<header class="test--header---186ZB">
										<h4 class="test--title---278p8" title="Debug">
											&nbsp;&nbsp;
											<input id="appDebug" type="checkbox" name="debug"> &nbsp;&nbsp;&nbsp;&nbsp;Debug
										</h4>
									</header>
									<header class="test--header---186ZB">
										<h4 class="test--title---278p8" title="Bisect">
											&nbsp;&nbsp;
											<input id="appBisect" type="checkbox" name="bisect"> &nbsp;&nbsp;&nbsp;&nbsp;Bisect
										</h4>
									</header>
								</section>
								<section class="test--component---RMLbQ">
									<header class="test--header---186ZB">
										<h4 class="test--title---278p8" title="testCmd">
											<input id="appTestCmd" type="text" name="testCmd" placeholder="Test Command">
										</h4>
									</header>
									<header class="test--header---186ZB">
										<h4 class="test--title---278p8" title="githubToken">
											<input id="appGithubToken" type="text" name="githubToken" placeholder="GitHub Token">
										</h4>
									</header>
									<header class="test--header---186ZB">
										<h4 class="test--title---278p8" title="privateConfig">
											<input id="appPrivateConfig" type="text" name="privateConfig" placeholder="Private Config Path">
										</h4>
									</header>
									<header class="test--header---186ZB">
										<h4 class="test--title---278p8" title="deployAnyway">
											&nbsp;&nbsp;
											<input id="appDeployAnyway" type="checkbox" name="deployAnyway"> &nbsp;&nbsp;&nbsp;&nbsp;Deploy Anyway
										</h4>
									</header>
									<header class="test--header---186ZB">
										<h4 class="test--title---278p8" title="lastGoodCommit">
											<input id="appLastGoodCommit" type="text" name="lastGoodCommit" placeholder="Last Good Commit">
										</h4>
									</header>
									<header class="test--header---186ZB">
										<h4 class="test--title---278p8" title="slackChannel">
											<input id="appSlackChannel" type="text" name="slackChannel" placeholder="Slack Channel">
										</h4>
									</header>
								</section>
								<section class="test--component---RMLbQ">
									<header class="test--header---186ZB">
										<h4 class="test--title---278p8" title="Full Report">
											<input type="submit" value="Submit">
										</h4>
									</header>
								</section>
							</form>
						</div>
					</section>
				</div>
			</div>
		</main>
	</div>
</body>
<script>
	document.getElementById('add-app').addEventListener('click', function() {
		const div = document.getElementById('add-app-form');
		if (div.style.display === 'none') div.style.display = 'block';
		else div.style.display = 'none';
	});
</script>

</html>