{
	"name": "pm2-ci",
	"version": "1.2.0",
	"description": "A PM2 module to run tests, deploy, send slack notifications on github webhooks",
	"main": "index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rohit-smpx/pm2-ci.git"
	},
	"keywords": [
		"pm2",
		"pm2-module",
		"github",
		"gitlab",
		"webhook",
		"hook",
		"reload",
		"restart",
		"git",
		"pull",
		"droneci",
		"ci",
		"jenkins",
		"bitbucket"
	],
	"author": "rohit-smpx",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/rohit-smpx/pm2-ci/issues"
	},
	"homepage": "https://github.com/rohit-smpx/pm2-ci#readme",
	"dependencies": {
		"@slack/client": "^4.2.0",
		"fs-extra": "^5.0.0",
		"handlebars": "^4.0.11",
		"koa": "^2.5.0",
		"koa-basic-auth": "^3.0.0",
		"koa-compress": "^2.0.0",
		"koa-hbs-renderer": "^1.2.0",
		"koa-send": "^5.0.0",
		"koa-static-cache": "^5.1.2",
		"lodash": "^4.17.10",
		"nedb": "^1.8.0",
		"nodegit": "^0.21.1",
		"pm2": "^2.10.3",
		"pmx": "^1.6.4",
		"rotating-file-stream": "^1.3.4",
		"tmp": "0.0.33",
		"vizion": "^2.0.0"
	},
	"devDependencies": {
		"eslint": "4.13.1",
		"eslint-config-smartprix": "^3.3.1"
	},
	"eslintConfig": {
		"extends": "smartprix",
		"rules": {
			"no-await-in-loop": 0,
			"no-console": 0,
			"complexity": "off"
		}
	},
	"config": {
		"apps": {
			"app_name": {
				"secret": "mysecret",
				"prehook": "npm install --production && git submodule update --init",
				"posthook": "echo done",
				"tests": {
					"privateConfig": "/private/config.js",
					"testCmd": "npm run install && npm run test",
					"lastGoodCommit": "COMMIT_HASH",
					"githubToken": "",
					"deployAnyway": true
				},
				"debug": false,
				"bisect": false
			}
		},
		"slackWebhook": "https://hooks.slack.com/services/XXXXXXXXX/XXXXXXXXX/XXXXXXXXXXXXXXXXXXX",
		"slackChannel": "",
		"authName": "admin",
		"authPassword": "",
		"host": "http://127.0.0.1",
		"dataDir": "./tmp",
		"port": 8888
	},
	"apps": [
		{
			"name": "pm2-ci",
			"merge_logs": true,
			"script": "index.js",
			"ignore_watch": [
				"tmp",
				"*.log",
				".history"
			],
			"env": {
				"PM2_EXTRA_DISPLAY": "true"
			}
		}
	]
}
